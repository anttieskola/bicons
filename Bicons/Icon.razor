<i class="@_class" style="@_style"></i>

@code {
    [Parameter]
    public string Name { get; set; } = string.Empty;

    [Parameter]
    public int Size { get; set; } = 32;


    private string _class
    {
        get
        {
            if (!string.IsNullOrEmpty(Name))
            {
                return $"bi-{Name}";
            }
            return "bi-alarm";
        }
    }

    private string _style
    {
        get
        {
            return $"font-size: {Size}px;";
        }
    }
}
